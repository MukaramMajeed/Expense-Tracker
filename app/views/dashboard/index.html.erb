<!-- app/views/dashboard/index.html.erb -->
<div class="bg-gray-800 min-h-screen text-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Dashboard Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
      <div>
        <h1 class="text-3xl font-bold text-white">Financial Dashboard</h1>
        <p class="mt-1 text-gray-400">Get insights into your spending habits</p>
      </div>
      <div class="mt-4 md:mt-0 flex space-x-3">
        <%= link_to new_transaction_path, class: "bg-emerald-600 hover:bg-emerald-700 text-white px-4 py-2 rounded-md font-medium flex items-center" do %>
          <svg class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
          </svg>
          Add Transaction
        <% end %>
        <%= link_to reports_path, class: "bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded-md font-medium flex items-center" do %>
          <svg class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
          Reports & Export
        <% end %>
      </div>
    </div>

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Total Spent Card -->
      <div class="bg-gray-900 rounded-lg shadow-lg p-6 border-l-4 border-emerald-500">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-emerald-500 bg-opacity-10">
            <svg class="h-8 w-8 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-400">Total Spent</p>
            <p class="text-2xl font-bold text-white"><%= current_user.currency_symbol %><%= number_with_precision(@total_spent || 0, precision: 2, delimiter: ',') %></p>
            <p class="text-xs text-emerald-400 flex items-center mt-1">
              <svg class="h-3 w-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
              <span>This month</span>
            </p>
          </div>
        </div>
      </div>

      <!-- Receiving Card -->
      <div class="bg-gray-900 rounded-lg shadow-lg p-6 border-l-4 border-blue-500">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-blue-500 bg-opacity-10">
            <svg class="h-8 w-8 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 8h6m-5 0a3 3 0 110 6H9l3 3m-3-6h6m6 1a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-400">Receiving</p>
            <p class="text-2xl font-bold text-white"><%= current_user.currency_symbol %><%= number_with_precision(@total_income || 0, precision: 2, delimiter: ',') %></p>
            <p class="text-xs text-blue-400 flex items-center mt-1">
              <svg class="h-3 w-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
              <span>This month</span>
            </p>
          </div>
        </div>
      </div>

      <!-- Balance Card -->
      <div class="bg-gray-900 rounded-lg shadow-lg p-6 border-l-4 border-purple-500">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-purple-500 bg-opacity-10">
            <svg class="h-8 w-8 text-purple-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-400">Balance</p>
            <p class="text-2xl font-bold text-white"><%= current_user.currency_symbol %><%= number_with_precision(@balance || 0, precision: 2, delimiter: ',') %></p>
            <p class="text-xs text-purple-400 flex items-center mt-1">
              <% if @balance && @balance > 0 %>
                <svg class="h-3 w-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                </svg>
                <span>Positive balance</span>
              <% else %>
                <svg class="h-3 w-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M14.707 10.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L9 12.586V5a1 1 0 012 0v7.586l2.293-2.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span>Waiting for transactions</span>
              <% end %>
            </p>
          </div>
        </div>
      </div>

      <!-- Budget Card -->
      <div class="bg-gray-900 rounded-lg shadow-lg p-6 border-l-4 border-amber-500">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-amber-500 bg-opacity-10">
            <svg class="h-8 w-8 text-amber-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-400">Budget Utilized</p>
            <p class="text-2xl font-bold text-white"><%= @budget_percentage || 0 %>%</p>
            <div class="w-full bg-gray-700 rounded-full h-2.5 mt-2">
              <div class="bg-amber-500 h-2.5 rounded-full" style="width: <%= @budget_percentage || 0 %>%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content Sections -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Recent Transactions -->
      <div class="lg:col-span-2">
        <div class="bg-gray-900 rounded-lg shadow-lg overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-700 flex justify-between items-center">
            <h2 class="text-xl font-bold text-white">Recent Transactions</h2>
            <%= link_to "View All", transactions_path, class: "text-sm text-emerald-400 hover:text-emerald-300" %>
          </div>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-700">
              <thead class="bg-gray-800">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Description</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Category</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Date</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Amount</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-gray-900 divide-y divide-gray-800">
                <% if @recent_transactions.present? %>
                  <% @recent_transactions.each do |transaction| %>
                    <tr>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center">
                          <% 
                            icon_bg_color = case transaction.category
                            when "food" then "bg-red-100"
                            when "housing" then "bg-blue-100"
                            when "income" then "bg-green-100"
                            when "utilities" then "bg-purple-100"
                            when "dining" then "bg-amber-100"
                            when "transportation" then "bg-indigo-100"
                            else "bg-gray-100"
                            end

                            icon_text_color = case transaction.category
                            when "food" then "text-red-600"
                            when "housing" then "text-blue-600"
                            when "income" then "text-green-600"
                            when "utilities" then "text-purple-600"
                            when "dining" then "text-amber-600"
                            when "transportation" then "text-indigo-600"
                            else "text-gray-600"
                            end
                          %>
                          <div class="flex-shrink-0 h-8 w-8 rounded <%= icon_bg_color %> flex items-center justify-center">
                            <svg class="h-4 w-4 <%= icon_text_color %>" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <% case transaction.category %>
                              <% when "food" %>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                              <% when "housing" %>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                              <% when "income" %>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                              <% when "utilities" %>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                              <% when "dining" %>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                              <% else %>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                              <% end %>
                            </svg>
                          </div>
                          <div class="ml-4">
                            <div class="text-sm font-medium text-white"><%= transaction.description %></div>
                          </div>
                        </div>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <% 
                          category_bg_color = case transaction.category
                          when "food" then "bg-red-100 text-red-800"
                          when "housing" then "bg-blue-100 text-blue-800"
                          when "income" then "bg-green-100 text-green-800"
                          when "utilities" then "bg-purple-100 text-purple-800"
                          when "dining" then "bg-amber-100 text-amber-800"
                          when "transportation" then "bg-indigo-100 text-indigo-800"
                          when "entertainment" then "bg-pink-100 text-pink-800"
                          else "bg-gray-100 text-gray-800"
                          end
                        %>
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= category_bg_color %>">
                          <%= transaction.category.capitalize %>
                        </span>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400"><%= transaction.date.strftime("%b %d, %Y") %></td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm font-medium <%= transaction.transaction_type == 'income' ? 'text-emerald-400' : 'text-red-400' %>">
                        <%= transaction.transaction_type == 'income' ? '+' : '-' %><%= current_user.currency_symbol %><%= number_with_precision(transaction.amount, precision: 2, delimiter: ',') %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm">
                        <div class="flex space-x-3">
                          <%= link_to edit_transaction_path(transaction), class: "text-blue-500 hover:text-blue-400" do %>
                            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                            </svg>
                          <% end %>
                          <%= form_with(url: transaction_path(transaction), method: :delete, class: "inline delete-form") do %>
                            <button type="submit" class="text-red-500 hover:text-red-400 delete-btn" data-confirm="Are you sure you want to delete this transaction?">
                              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                              </svg>
                            </button>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td colspan="5" class="px-6 py-4 whitespace-nowrap text-center text-gray-400">
                      No transactions found. 
                      <%= link_to "Add your first transaction", new_transaction_path, class: "text-emerald-400 hover:underline" %>.
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Spending Breakdown -->
      <div class="lg:col-span-1">
        <div class="bg-gray-900 rounded-lg shadow-lg h-full">
          <div class="px-6 py-4 border-b border-gray-700">
            <h2 class="text-xl font-bold text-white">Spending Breakdown</h2>
            <p class="text-sm text-gray-400">This month</p>
          </div>
          <div class="p-6">
            <% if @category_percentages.present? && @category_percentages.any? %>
              <% @category_percentages.each do |category, percentage| %>
                <% 
                  category_color = case category
                  when "housing" then "emerald"
                  when "food" then "purple"
                  when "transportation" then "blue"
                  when "entertainment" then "amber"
                  when "utilities" then "indigo"
                  else "red"
                  end
                %>
                <div class="relative pt-1">
                  <div class="flex mb-2 items-center justify-between">
                    <div>
                      <span class="text-xs font-semibold inline-block text-<%= category_color %>-600"><%= category.capitalize %></span>
                    </div>
                    <div class="text-right">
                      <span class="text-xs font-semibold inline-block text-white"><%= percentage %>%</span>
                    </div>
                  </div>
                  <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-gray-700">
                    <div style="width: <%= percentage %>%" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-<%= category_color %>-500"></div>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="text-center text-gray-400 py-8">
                No spending data available yet. Add transactions to see your spending breakdown.
              </div>
            <% end %>
            
            <!-- Upcoming Bills Section -->
            <div class="mt-8">
              <h3 class="text-lg font-semibold text-white mb-4">Quick Actions</h3>
              <div class="space-y-3">
                <%= link_to new_transaction_path, class: "flex justify-between items-center p-3 bg-gray-800 rounded-lg hover:bg-gray-700" do %>
                  <div class="flex items-center">
                    <div class="p-2 rounded-full bg-emerald-500 bg-opacity-10">
                      <svg class="h-5 w-5 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                      </svg>
                    </div>
                    <div class="ml-3">
                      <p class="text-sm font-medium text-white">Add New Transaction</p>
                      <p class="text-xs text-gray-400">Record spending or receiving</p>
                    </div>
                  </div>
                  <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                <% end %>
                
                <%= link_to transactions_path, class: "flex justify-between items-center p-3 bg-gray-800 rounded-lg hover:bg-gray-700" do %>
                  <div class="flex items-center">
                    <div class="p-2 rounded-full bg-blue-500 bg-opacity-10">
                      <svg class="h-5 w-5 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                      </svg>
                    </div>
                    <div class="ml-3">
                      <p class="text-sm font-medium text-white">View All Transactions</p>
                      <p class="text-xs text-gray-400">See your transaction history</p>
                    </div>
                  </div>
                  <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>