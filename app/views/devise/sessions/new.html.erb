<div class="min-h-screen flex items-center justify-center bg-gray-900 px-4">
  <div class="max-w-md w-full space-y-8 bg-gray-800 p-10 rounded-xl shadow-lg">
    <h2 class="text-center text-3xl font-bold text-white">üîê Log in to your account</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="space-y-4">
        <div class="flex flex-col">
          <%= f.label :email, class: "text-white mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-700 text-white px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" %>
        </div>

        <div class="flex flex-col">
          <%= f.label :password, class: "text-white mb-1" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "bg-gray-700 text-white px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center space-x-2">
            <%= f.check_box :remember_me, class: "rounded focus:ring-green-500" %>
            <%= f.label :remember_me, class: "text-white" %>
          </div>
        <% end %>

        <div>
          <%= f.submit "üöÄ Log in", class: "w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-2 rounded-md transition duration-200" %>
        </div>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
