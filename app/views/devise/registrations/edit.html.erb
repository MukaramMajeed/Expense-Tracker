<div class="min-h-screen flex items-center justify-center bg-gray-900 px-4">
  <div class="max-w-md w-full space-y-6 bg-gray-800 p-10 rounded-xl shadow-lg">
    
    <h2 class="text-center text-3xl font-bold text-white">🛠️ Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-4">

        <div class="flex flex-col">
          <%= f.label :email, class: "text-white mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-700 text-white px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="text-yellow-300 text-sm">
            Currently waiting confirmation for: <%= resource.unconfirmed_email %>
          </div>
        <% end %>

        <div class="flex flex-col">
          <%= f.label :password, class: "text-white mb-1" %>
          <i class="text-sm text-gray-400 mb-1">(leave blank if you don't want to change it)</i>
          <%= f.password_field :password, autocomplete: "new-password", class: "bg-gray-700 text-white px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" %>
          <% if @minimum_password_length %>
            <em class="text-gray-400 text-sm mt-1"><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="flex flex-col">
          <%= f.label :password_confirmation, class: "text-white mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "bg-gray-700 text-white px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" %>
        </div>

        <div class="flex flex-col">
          <%= f.label :current_password, class: "text-white mb-1" %>
          <i class="text-sm text-gray-400 mb-1">(we need your current password to confirm your changes)</i>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "bg-gray-700 text-white px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" %>
        </div>

        <div>
          <%= f.submit "✅ Update", class: "w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-2 rounded-md transition duration-200" %>
        </div>

      </div>
    <% end %>

    <div class="pt-6 space-y-4 text-center">
      <h3 class="text-red-400 text-xl font-semibold">💥 Cancel my account</h3>
      <div>
        Unhappy? 
        <%= button_to "❌ Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "mt-2 bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-md transition duration-200" %>
      </div>

      <%= link_to "⬅️ Back", :back, class: "text-gray-300 hover:text-white underline text-sm" %>
    </div>
  </div>
</div>
