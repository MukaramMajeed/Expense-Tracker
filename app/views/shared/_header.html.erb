<!-- app/views/shared/_header.html.erb -->
<header class="bg-gray-900 text-white">
  <div class="container mx-auto px-4 py-3 flex items-center justify-between">
    <div class="flex items-center">
      <div class="text-teal-400 mr-2">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"></circle>
          <polyline points="12 6 12 12 16 14"></polyline>
        </svg>
      </div>
      <a href="/" class="text-xl font-bold text-teal-400">ExpenseTrack</a>
    </div>
    
    <% if user_signed_in? %>
      <!-- Navigation for logged in users -->
      <nav class="hidden md:flex space-x-6">
        <a href="/dashboard" class="text-gray-300 hover:text-white">Dashboard</a>
        <a href="/transactions" class="text-gray-300 hover:text-white">Transactions</a>
        <a href="/reports" class="text-gray-300 hover:text-white">Reports</a>
        <a href="/categories" class="text-gray-300 hover:text-white">Categories</a>
      </nav>
      
      <div class="flex items-center space-x-4">
        <button class="text-gray-300 hover:text-white">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
            <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
          </svg>
        </button>
        
        <div class="group relative">
          <div class="w-8 h-8 rounded-full bg-teal-500 flex items-center justify-center text-white font-medium cursor-pointer">
            <%= current_user.email[0..1].upcase %>
          </div>
          <div class="absolute right-0 mt-2 w-48 bg-gray-800 rounded-md shadow-lg py-1 z-10 hidden group-hover:block">
            <%= link_to "Profile", edit_user_registration_path, class: "block px-4 py-2 text-sm text-gray-300 hover:bg-gray-700" %>
            <%= link_to "Sign out", destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: "block px-4 py-2 text-sm text-gray-300 hover:bg-gray-700" %>
          </div>
        </div>
      </div>
    <% else %>
      <!-- Navigation for guests -->
      <div class="flex items-center space-x-4">
        <%= link_to "Log in", new_user_session_path, class: "text-gray-300 hover:text-white" %>
        <%= link_to "Sign up", new_user_registration_path, class: "bg-teal-500 hover:bg-teal-600 text-white px-4 py-2 rounded-md" %>
      </div>
    <% end %>
  </div>
</header>